# .env.example for OurLibrary Project

# Firebase configuration consumed by core/tokenService.js
OURLIBRARY_FIREBASE_API_KEY="YOUR_FIREBASE_API_KEY"
OURLIBRARY_FIREBASE_AUTH_DOMAIN="YOUR_FIREBASE_AUTH_DOMAIN"
OURLIBRARY_FIREBASE_PROJECT_ID="YOUR_FIREBASE_PROJECT_ID"
OURLIBRARY_FIREBASE_STORAGE_BUCKET="YOUR_FIREBASE_STORAGE_BUCKET"
OURLIBRARY_FIREBASE_MESSAGING_SENDER_ID="YOUR_FIREBASE_MESSAGING_SENDER_ID"
OURLIBRARY_FIREBASE_APP_ID="YOUR_FIREBASE_APP_ID"

# Optional: override manifest URL for bootstrapper (defaults to https://ourlibrary.github.io/manifest.json)
OURLIBRARY_MANIFEST_URL="https://example.com/manifest.json"

# Google Drive Service Account Key (for server-side manifest publisher)
# This should be the content of your service account JSON key file, base64 encoded or similar
# DO NOT COMMIT ACTUAL KEYS TO GIT. Use environment variables or a secure vault.
GOOGLE_SERVICE_ACCOUNT_KEY_BASE64="YOUR_BASE64_ENCODED_SERVICE_ACCOUNT_KEY"

# Google Drive Folder IDs (for content storage)
# These are the IDs of your Free and Premium content folders in Google Drive
GOOGLE_DRIVE_FREE_FOLDER_ID="YOUR_FREE_FOLDER_ID"
GOOGLE_DRIVE_PREMIUM_FOLDER_ID="YOUR_PREMIUM_FOLDER_ID"

# Secret for HMAC signing (if using a custom API gateway or Apps Script fallback)
# This should be a strong, randomly generated key.
HASH_SECRET_KEY="YOUR_STRONG_RANDOM_SECRET_KEY"
